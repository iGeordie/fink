{
	"codestyle":{
		"runOn":["build"],
		"tasks":{
			"newer:jscs":true
		}
	},
	"validate":{
		"runOn":["build"],
		"tasks":{
			"newer:eslint":true,
			"newer:csslint":true,
			"newer:htmlhintplus":{
				"package":"grunt-htmlhint-plus"
			}
		}
	},
	"cssOps":{
		"runOn":["build"],
		"tasks":{
			"newer:postcss":true,
			"newer:stripmq":true
		}
	},
	"minify":{
		"runOn":["build"],
		"tasks":{
			"newer:imagemin":true,
			"newer:cssmin":true,
			"newer:uglify":true,
			"newer:webp":true
		}
	},
	"docs":{
		"runOn":["build"],
		"tasks":{
			"newer:jsdoc":true,
			"newer:phantomas":true,
			"exec:styleguide":true
		}
	}
}