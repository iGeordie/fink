{
	"pre_ops":{
		"runOn":["build"],
		"tasks":{
			"copy":true,
			"bower-install-simple":true,
			"newer:modernizr":true
		}
	},
	"js":{
		"runOn":["build"],
		"tasks":{
			"newer:browserify:babel":true,
			"newer:jscs":true,
			"newer:eslint":true,
			"newer:uglify":true
		}
	},
	"css":{
		"runOn":["build"],
		"tasks":{
			"sass":true,
			"newer:sass-convert":true,
			"newer:csslint":true,
			"newer:postcss":true,
			"newer:stripmq":true,
			"newer:cssmin":true
		}
	},
	"html":{
		"runOn":["build"],
		"tasks":{
			"newer:zetzer":true,
			"wiredep":true,
			"newer:htmlhintplus":{
				"package":"grunt-htmlhint-plus"
			}
		}
	},
	"icons":{
		"runOn":["build"],
		"tasks":{
			"real_favicon":true,
			"svgmin:icons":true,
			"grunticon:build":true
		}
	},
	"images":{
		"runOn":["build"],
		"tasks":{
			"newer:imagemin":true,
			"newer:webp":true
		}
	},
	"docs":{
		"runOn":["build"],
		"tasks":{
			"newer:jsdoc":true,
			"exec:styleguide":true,
			"newer:phantomas":true
		}
	},
	"watchers":["watch:css", 
				"watch:js", 
				"watch:html",
				"watch:deps",
				"watch:favicon",
				"watch:svgmin",
				"watch:grunticon"]
}